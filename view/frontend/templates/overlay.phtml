<script type="text/javascript">
require([
    'jquery'
], function ($) {
    'use strict';

    $(document).ready(function() {
        window.setTimeout(showOverlay, <?php echo $this->getOverlayTimeout(); ?>);
    });

    function showOverlay() {
        $(".bxOverlay").fadeIn("slow");
    }

    $('#bxOverlayExitButton').on('click', function(){
      $('.bxOverlay').hide();
    })

  }
);


</script>

<button class="bxOverlay" id="bxOverlayExitButton" type="button">&#x2715;</button>

<a class="bxOverlay" id="bxOverlayUrl" href="<?php echo $this->getOverlayUrl(); ?>">

  <img class="bxOverlay" id="bxOverlayBackgroundImage" src="<?php echo $this->getOverlayBackground(); ?>">

  <img class="bxOverlay" id="bxOverlayTitleImage" src="<?php echo $this->getOverlayTitle(); ?>">

  <div class="bxOverlay" id="bxOverlayText"><?php echo $this->getOverlayText(); ?></div>

  <img class="bxOverlay" id="bxOverlayButton" src="<?php echo $this->getOverlayButton(); ?>">

</a>

<div class="bxOverlay" id="bxOverlayShadow"></div>
