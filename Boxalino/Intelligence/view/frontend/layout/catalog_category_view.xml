<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Boxalino_Intelligence::css/filter.css"/>
        <css src="Boxalino_Intelligence::css/nouislider.css"/>
    </head>
    <body>
        <attribute name="class" value="page-products"/>
        <referenceContainer name="content">
            <block class="Boxalino\Intelligence\Block\Facets" name="catalog.filter.top"
                   template="Boxalino_Intelligence::top_filters.phtml"  before="toolbar">
            </block>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block class="Boxalino\Intelligence\Block\Slider" name="catalog.bxSlider"
                   template="Boxalino_Intelligence::slider.phtml">
            </block>
        </referenceContainer>
    </body>
</page>